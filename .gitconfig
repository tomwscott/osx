[user]
    name = Tom Scott
    email = tomwscott@gmail.com

[core]
    editor = vim

[color]
    ui = auto

[alias]
    st = status
    ci = commit
    co = checkout
    di = diff
    dc = diff --cached
    aa = add --all

    l = "!source ~/.githelpers && pretty_git_log"
    la = !git l --all

    ll = log --oneline --decorate --graph
    lla = !git ll --all

    pom = push origin master
